{
  "compilerOptions": {
    /* File Locations */
    "rootDir": "src",
    "outDir": "dist",

    /* Language & Module */
    "target": "ES2020",                   // Modern JS output, supports async/await
    "module": "commonjs",                 // CommonJS for Node.js
    "moduleResolution": "node",           // Node-style resolution
    "esModuleInterop": true,              // Allow default imports from CJS modules
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,            // Allow importing .json files

    /* Type Checking */
    "strict": true,                       // Enable all strict checks
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,                 // Skip type checking .d.ts files
    "noFallthroughCasesInSwitch": true,

    /* Source Maps */
    "sourceMap": true,                    // Enable .map files for debugging
    "declaration": true,                  // Emit .d.ts files
    "declarationMap": true                // Map .d.ts to source
  },
  "include": ["src"],                     // compile this
  "exclude": ["node_modules", "dist"]     // don't compile this
}
